<section class="banner-hero position-relative overflow-hidden text-white">
    <div class="banner-background" style="background-image: url('@BackgroundImage');"></div>
    <div class="banner-overlay"></div>
    <div class="container position-relative py-5">
        <div class="row justify-content-center text-center">
            <div class="col-12 col-lg-8">
                @if (!string.IsNullOrWhiteSpace(Tagline))
                {
                    <span class="badge rounded-pill text-bg-light text-uppercase mb-4 fw-semibold px-4 py-2 opacity-75">@Tagline</span>
                }
                <h1 class="display-4 fw-bold mb-4">@Title</h1>
                <p class="lead mb-4">@Subtitle</p>
                <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
                    <NavLink class="btn btn-lg btn-light text-primary fw-semibold rounded-pill px-5" href="@PrimaryActionLink">@PrimaryActionText</NavLink>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Subtitle { get; set; } = string.Empty;
    [Parameter] public string Tagline { get; set; } = string.Empty;
    [Parameter] public string BackgroundImage { get; set; } = string.Empty;
    [Parameter] public string PrimaryActionText { get; set; } = "Comprar ahora";
    [Parameter] public string PrimaryActionLink { get; set; } = "/products";
}
